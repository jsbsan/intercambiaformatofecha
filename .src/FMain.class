Public Sub ButtonCarga_Click()

  TextArea1.Text = File.Load("listaRutasYficheros.txt")

End

Public Sub ButtonProcesar_Click()

  Dim lista As String[]
  Dim l As String

  lista = Split(TextArea1.text, "\n")
  comun.checkOmitirLineaSindatos = CheckBoxLineasSinDatos.value
  For Each l In lista
    comun.procesa(l)
  Next

  Message.Info("Fin de procesado")

End

Public Sub ButtonCargaDirectorio_Click()

  Dim contenido As New String[]

  contenido.Add("")

  comun.recorrer("/home/minino/MANUAL", contenido)
  TextArea1.Text = contenido[0]

End
